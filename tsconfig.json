{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "target": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@infogata"
    ],
    "types": []
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}

