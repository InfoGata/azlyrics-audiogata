{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "esnext",
    "target": "es2015",
    "strict": true,
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ],
    "types": ["@infogata/audiogata-plugin-typings"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}

